; Customized gitconfig file.
;
; Maintainer:  Marek Balint <mareq@balint.eu>
; Last change: 2018 Nov 01


[user]
  name = mareq
  email = mareq@balint.eu
[core]
  editor = vim
  autocrlf = false
  excludesfile = /Users/mq/.gitignore_global
[diff]
  tool = vimdiff
[pager]
  diff =
[merge]
  tool = vimdiff
  conflictstyle = diff3
[interactive]
  singlekey = true
[push]
  ;default = simple
  default = matching
[alias]
  unstage = reset --
  dt = difftool
  mt = mergetool
  l = log --oneline
  lg = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce>%Creset' --abbrev-commit
  lgnc = log --graph --pretty=format:'%h -%d %s [%ai] <%ae> [%ci] <%ce>' --no-color --abbrev-commit
  llg = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce>%Creset' --abbrev-commit --all
  llgnc = log --graph --pretty=format:'%h -%d %s [%ai] <%ae> [%ci] <%ce>' --no-color --abbrev-commit --all
  lm = log --left-right --boundary --graph --merge --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce>%Creset' --abbrev-commit
  llm = log --left-right --boundary --graph --merge --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce>%Creset' --abbrev-commit --all
  fum = diff --name-only --diff-filter=U
  ours = checkout --ours
  theirs = checkout --theirs
  repair-dates = filter-branch --env-filter 'GIT_COMMITTER_DATE=$GIT_AUTHOR_DATE; export GIT_COMMITTER_DATE'
  ; get branches deleted in upstream: git fetch -p && git branch -vv | grep ': gone' | awk '{print $1}'


