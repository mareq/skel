; Customized gitconfig file.
;
; Maintainer:  Marek Balint <mareq@balint.eu>
; Last change: 2021 Dec 14


[user]
  name = Mareq Balint
  email = id@mareq.me
  signingkey = 2C9CDBF5C2536649ABA14C02ADE3E9155318A3C2
  ;name = Alice Anderson
  ;email = alice@anderson.tld
  ;name = Bob Bell
  ;email = bob@bell.tld
  ;name = Carol Clarke
  ;email = carol@clarke.tld
[init]
  defaultBranch = master
[core]
  abbrev = 8
  editor = vim
  ;pager = less -+$LESS -FRX
  ;pager = cat
  autocrlf = false
  excludesfile = /home/mareq/.gitignore_global
[diff]
  tool = vimdiff
  submodule = log
[merge]
  tool = vimdiff
  ;conflictstyle = diff3
  ;verifySignatures = true
[pull]
  ff = only
  ;rebase = true
[commit]
  gpgSign = true
[push]
  ;default = simple
  default = matching
[submodule]
  recurse = true
[interactive]
  singlekey = true
[alias]
  unstage = reset --
  s = status
  co = checkout
  dt = difftool
  mt = mergetool
  l = log --oneline
  lg = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit
  lg8 = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit -n8
  lg16 = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit -n16
  lg32 = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit -n32
  lgnc = log --graph --pretty=format:'%h -%d %s [%ai] <%ae> [%ci] <%ce> [%G?:%GS]' --no-color --abbrev-commit
  llg = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit --all
  llgnc = log --graph --pretty=format:'%h -%d %s [%ai] <%ae> [%ci] <%ce> [%G?:%GS]' --no-color --abbrev-commit --all
  lgnb = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit
  lg8nb = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit -n8
  lg16nb = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit -n16
  lg32nb = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit -n32
  lgncnb = log --graph --pretty=format:'%h - %s [%ai] <%ae> [%ci] <%ce> [%G?:%GS]' --no-color --abbrev-commit
  llgnb = log --graph --pretty=format:'%C(bold yellow)%h%Creset -%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce> %C(bold red)[%G?:%GS]%Creset' --abbrev-commit --all
  llgncnb = log --graph --pretty=format:'%h - %s [%ai] <%ae> [%ci] <%ce> [%G?:%GS]' --no-color --abbrev-commit --all
  lm = log --left-right --boundary --graph --merge --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce>%Creset' --abbrev-commit
  llm = log --left-right --boundary --graph --merge --pretty=format:'%C(bold yellow)%h%Creset -%C(bold red)%d%C(bold white) %s %C(bold green)[%ai] %C(bold blue)<%ae> %C(bold green)[%ci] %C(bold blue)<%ce>%Creset' --abbrev-commit --all
  fum = diff --name-only --diff-filter=U
  ours = checkout --ours
  theirs = checkout --theirs
  sdiff = !git diff && git submodule foreach 'git diff'
  spush = push --recurse-submodules=check
  repair-dates = filter-branch --env-filter 'GIT_COMMITTER_DATE=$GIT_AUTHOR_DATE; export GIT_COMMITTER_DATE'
  ls-branches-gone = !git fetch -p && git branch -vv | grep ': gone' | awk '{print $1}'
[protocol "file"]
  allow = always


